<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for dark mode. -->
    <style name="Theme.SushiScan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_orange</item>
        <item name="colorPrimaryVariant">@color/accent_orange_hover</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent_orange</item>
        <item name="colorSecondaryVariant">@color/accent_orange_hover</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Background colors optimized for dark mode -->
        <item name="android:colorBackground">@color/primary_background</item>
        <item name="colorSurface">@color/secondary_background</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_background</item>
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/primary_background</item>
        <!-- Text colors for dark mode -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <!-- Card background -->
        <item name="cardBackgroundColor">@color/tertiary_background</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/primary_background</item>
    </style>
</resources>