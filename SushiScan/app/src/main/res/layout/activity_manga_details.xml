<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Retour"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Manga Title -->
        <TextView
            android:id="@+id/mangaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Manga Cover -->
        <ImageView
            android:id="@+id/mangaCover"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginBottom="24dp"
            android:background="@color/design_default_color_surface" />

        <!-- Scan Chapters Container -->
        <LinearLayout
            android:id="@+id/scanChaptersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- No Scans Message -->
        <TextView
            android:id="@+id/noScansMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aucun scan disponible pour ce manga."
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>
